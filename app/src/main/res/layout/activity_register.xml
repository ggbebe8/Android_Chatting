<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="250dp"
    tools:context=".add_friend"
    android:background="#f5f5f5"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    >
    <TextView
        android:text="Register"
        android:textSize="20sp"
        android:textColor="#fff"
        android:gravity="center"
        android:background="#4169E1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvRegister"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="EMAIL"
        android:id="@+id/etRegisterEmail"
        android:background="#ffffff"
        android:layout_below="@+id/tvRegister"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="PASSWORD"
        android:id="@+id/etRegisterPassword1"
        android:background="#ffffff"
        android:layout_below="@+id/etRegisterEmail"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="CONFIRM PASSWORD"
        android:id="@+id/etRegisterPassword2"
        android:background="#ffffff"
        android:layout_below="@+id/etRegisterPassword1"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_marginBottom="30dp"
        android:paddingLeft="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etRegisterPassword2"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="Register"
            android:id="@+id/btnRegisterAdd"
            />
        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="Close"
            android:id="@+id/btnRegisterClose"
            />
    </LinearLayout>

</RelativeLayout>